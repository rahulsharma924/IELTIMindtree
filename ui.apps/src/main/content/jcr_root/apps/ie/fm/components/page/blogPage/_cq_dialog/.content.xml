<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Page"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[cq.common.wcm,core.wcm.components.page.v3.editor,cq.wcm.msm.properties,granite.contexthub.configuration,cq.siteadmin.admin.properties,core.wcm.components.image.v3.editor]"
    helpPath="https://www.adobe.com/go/aem_cmp_page_v3"
    mode="edit"
    trackingFeature="core-components:page:v3">
    <content
        granite:class="cq-dialog-content-page"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                granite:class="cq-siteadmin-admin-properties-tabs"
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                size="L">
                <items jcr:primaryType="nt:unstructured">
                    <blog
                        jcr:primaryType="nt:unstructured"
                        jcr:title="blog"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <blogCategory
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                        fieldDescription="Blog Category field to tag pages with Blog Category attribute"
                                        fieldLabel="Blog Category"
                                        multiple="{Boolean}true"
                                        name="./blogCategory"
                                        renderReadOnly="{Boolean}true"
                                        required="{Boolean}true"/>
                                    <date
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                        fieldDescription="Blog Date"
                                        fieldLabel="Blog Date"
                                        name="./publishDate"
                                        required="{Boolean}true"/>
                                    <author
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldDescription="Author"
                                        fieldLabel="Author"
                                        name="./author"
                                        required="{Boolean}true"/>
                                    <social-media-icon1
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Social Media Icon1"
                                        name="./blogfbicon"
                                        rootPath="/content/fm"/>
                                    <facebook
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Facebook Link"
                                        name="./blogfb"
                                        rootPath="/content/fm"/>
                                    <social-media-icon2
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Social Media Icon2"
                                        name="./bloglinkedinicon"
                                        rootPath="/content/fm"/>
                                    <linkedin
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Linkedin Link"
                                        name="./bloglinkedin"
                                        rootPath="/content/fm"/>
                                    <social-media-icon3
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Social Media Icon3"
                                        name="./blogtwittericon"
                                        rootPath="/content/fm"/>
                                    <twitter
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        fieldLabel="Twitter Link"
                                        name="./blogtwitter"
                                        rootPath="/content/fm"/>
                                    <blogtag
                                        cq:showOnCreate="{Boolean}true"
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="cq/gui/components/coral/common/form/tagfield"
                                        fieldDescription="Tag of the Blog"
                                        fieldLabel="Blog Tag"
                                        multiple="{Boolean}true"
                                        name="./blogtag"/>
                                </items>
                            </column>
                        </items>
                    </blog>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
